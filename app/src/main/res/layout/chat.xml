<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linear_head_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:minHeight="64dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chevron_left_white"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp" />

            <!-- Profile Picture Container -->
            <LinearLayout
                android:id="@+id/linear_dp_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dps"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/banned_user"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@android:color/white"
                    app:civ_circle_background_color="@android:color/white" />

                <ImageView
                    android:id="@+id/status_dots"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="-16dp"
                    android:src="@drawable/dits2"
                    android:scaleType="centerCrop"
                    android:background="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- User Info -->
            <LinearLayout
                android:id="@+id/linear12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UserName"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <ImageView
                        android:id="@+id/verified"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/verify563_3"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/user_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="last seen recently"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.8"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Action Buttons -->
            <ImageView
                android:id="@+id/voiceCall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/voicecall"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/videoCall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/videocall"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/settings"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Chat Content -->
    <LinearLayout
        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintBottom_toTopOf="@id/message_input_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Upload Progress (Hidden by default) -->
        <LinearLayout
            android:id="@+id/upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?attr/colorSurfaceVariant"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageview_up_symbol"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/upload"
                android:scaleType="centerInside"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/textview_up_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Uploading..."
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <ProgressBar
                android:id="@+id/progressbar1"
                android:layout_width="100dp"
                android:layout_height="4dp"
                style="?android:progressBarStyleHorizontal" />

        </LinearLayout>

        <!-- Messages RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:clipToPadding="false"
            tools:listitem="@layout/chat_lists" />

        <!-- Typing Indicator -->
        <TextView
            android:id="@+id/typeing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:text="typing..."
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="?attr/colorPrimary"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Message Input Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/message_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Reply Container (Hidden by default) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/message_body_in_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="?attr/colorPrimary"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/message_body_in_reply_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reply to Self"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/message_body_in_reply_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Message Text"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/message_body_in_reply_cancel"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_close_black"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Voice Recording Container (Hidden by default) -->
            <LinearLayout
                android:id="@+id/sound_record_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="?attr/colorErrorContainer"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/sound_record_cancel"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_close_black"
                    android:scaleType="centerInside"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp" />

                <TextView
                    android:id="@+id/recording_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="● Recording... 00:00"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnErrorContainer"
                    android:gravity="center"
                    android:layout_marginHorizontal="12dp" />

                <ImageView
                    android:id="@+id/send_audio"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_send_black"
                    android:scaleType="centerInside"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp" />

            </LinearLayout>

            <!-- Main Message Input -->
            <LinearLayout
                android:id="@+id/message_body_in_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_button"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/image___atch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ux_6_2"
                    android:scaleType="centerInside"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="?attr/colorOutlineVariant"
                    android:layout_marginHorizontal="4dp" />

                <ImageView
                    android:id="@+id/view1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/view1"
                    android:scaleType="centerInside"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Message"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:maxLines="4"
                    android:inputType="textCapSentences|textMultiLine"
                    android:imeOptions="actionSend" />

                <ImageView
                    android:id="@+id/sound"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ux_6_1"
                    android:scaleType="centerInside"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/send"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_send_black"
                    android:scaleType="centerInside"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="?attr/colorPrimary"
                    android:padding="8dp"
                    android:layout_margin="4dp" />

            </LinearLayout>

            <!-- Attachment Options (Hidden by default) -->
            <LinearLayout
                android:id="@+id/linearExtra_attach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_camera_attach"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/camera"
                    android:scaleType="centerInside"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_margin="4dp" />

                <ImageView
                    android:id="@+id/image_music_attach"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/music"
                    android:scaleType="centerInside"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_margin="4dp" />

                <ImageView
                    android:id="@+id/media"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/hevo_1"
                    android:scaleType="centerInside"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_margin="4dp" />

                <ImageView
                    android:id="@+id/attach_files"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_more_vert_grey"
                    android:scaleType="centerInside"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_margin="4dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_head_top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="3dp"
		android:paddingTop="2dp"
		android:paddingRight="3dp"
		android:background="#007BA7"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/back"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/ic_chevron_left_white"
			android:scaleType="centerInside"
			android:layout_gravity="center_horizontal|center_vertical" />
		<LinearLayout
			android:id="@+id/linear_dp_box"
			android:layout_width="61dp"
			android:layout_height="60dp"
			android:layout_marginLeft="5dp"
			android:orientation="vertical">
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/dps"
				android:layout_width="55dp"
				android:layout_height="55dp"
				android:padding="3dp"
				android:src="@drawable/banned_user"
				android:layout_gravity="bottom"
				app:civ_border_width="0dp"
				app:civ_border_color="#ffffff"
				app:civ_circle_background_color="#ffffff"
				app:civ_border_overlay="true" />
			<ImageView
				android:id="@+id/status_dots"
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:layout_marginLeft="12dp"
				android:layout_marginTop="1dp"
				android:padding="1dp"
				android:background="@android:color/transparent"
				android:src="@drawable/dits2"
				android:scaleType="centerCrop"
				android:translationY="-16.0dp"
				android:layout_gravity="center_horizontal|center_vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear12"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="10dp"
			android:paddingLeft="2dp"
			android:paddingTop="4dp"
			android:paddingRight="2dp"
			android:paddingBottom="2dp"
			android:gravity="left"
			android:orientation="vertical"
			android:layout_gravity="center_vertical"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/linear16"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_marginRight="5dp"
					android:text="UserName"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#000000" />
				<ImageView
					android:id="@+id/verified"
					android:layout_width="13dp"
					android:layout_height="13dp"
					android:layout_marginTop="1dp"
					android:background="@android:color/transparent"
					android:src="@drawable/verify563_3"
					android:scaleType="fitCenter"
					android:layout_gravity="center_horizontal|center_vertical" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linearF"
				android:layout_width="match_parent"
				android:layout_height="20dp"
				android:paddingLeft="15dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/user_status"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="2dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Offline "
					android:textSize="10sp"
					android:textStyle="bold"
					android:textColor="#E91E63" />
			</LinearLayout>
		</LinearLayout>
		<ImageView
			android:id="@+id/voiceCall"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="8dp"
			android:src="@drawable/voicecall"
			android:scaleType="centerInside"
			android:layout_gravity="center_horizontal|center_vertical" />
		<ImageView
			android:id="@+id/videoCall"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="7dp"
			android:src="@drawable/videocall"
			android:scaleType="centerInside"
			android:layout_gravity="center_horizontal|center_vertical" />
		<ImageView
			android:id="@+id/settings"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginRight="8dp"
			android:padding="3dp"
			android:src="@drawable/settings"
			android:scaleType="centerInside"
			android:layout_gravity="center_horizontal|center_vertical" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/main_bg"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical"
		android:layout_weight="1">
		<LinearLayout
			android:id="@+id/upload_image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:paddingLeft="15dp"
			android:paddingTop="2dp"
			android:paddingRight="8dp"
			android:background="#F5F5F5"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:layout_gravity="center_horizontal|center_vertical">
			<ImageView
				android:id="@+id/imageview_up_symbol"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/upload"
				android:scaleType="centerInside" />
			<TextView
				android:id="@+id/textview_up_progress"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="99% Uploaded"
				android:textSize="12sp"
				android:textColor="#000000" />
			<ProgressBar
				android:id="@+id/progressbar1"
				android:layout_width="match_parent"
				android:layout_height="8dp"
				android:indeterminate="false"
				style="?android:progressBarStyleHorizontal" />
		</LinearLayout>
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recyclerview1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:layout_weight="1"
			tools:listitem="@layout/chat_lists" />
		<TextView
			android:id="@+id/typeing"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Sunny is typing.."
			android:textSize="14sp"
			android:textStyle="bold"
			android:textColor="#007BA7" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear_message"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="#F5F5F5"
		android:gravity="bottom"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/message_body_in_reply"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<androidx.cardview.widget.CardView
				android:id="@+id/cardview1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardBackgroundColor="#F9F9F9"
				android:gravity="center_horizontal|center_vertical"
				app:cardElevation="0dp"
				app:cardCornerRadius="15dp">
				<LinearLayout
					android:id="@+id/linear_use_for_line"
					android:layout_width="8dp"
					android:layout_height="match_parent"
					android:background="#9665A4"
					android:orientation="vertical" />
				<LinearLayout
					android:id="@+id/message_body_in_reply_chld"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="5dp"
					android:background="@android:color/transparent"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/message_body_in_reply_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="2dp"
						android:text="Reply to Self"
						android:textSize="14sp"
						android:textColor="#543351"
						android:singleLine="true" />
					<TextView
						android:id="@+id/message_body_in_reply_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Message Text"
						android:textSize="16sp"
						android:textColor="#000000"
						android:singleLine="true" />
				</LinearLayout>
				<ImageView
					android:id="@+id/message_body_in_reply_cancel"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic_close_black"
					android:scaleType="centerInside"
					android:layout_gravity="right|top" />
			</androidx.cardview.widget.CardView>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/sound_record_body"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/sound_record_cancel"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="8dp"
				android:padding="8dp"
				android:src="@drawable/ic_close_black"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/recording_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="●●●   Recording...    00:00"
				android:textSize="12sp"
				android:textColor="#4267B2"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/send_audio"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_marginRight="8dp"
				android:padding="3dp"
				android:src="@drawable/ic_send_black"
				android:scaleType="centerInside" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/message_body_in_message"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/image___atch"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="5dp"
				android:padding="8dp"
				android:src="@drawable/ux_6_2"
				android:scaleType="fitCenter" />
			<LinearLayout
				android:id="@+id/msg_spc"
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp"
				android:padding="8dp"
				android:background="#E0E0E0"
				android:orientation="vertical" />
			<ImageView
				android:id="@+id/view1"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_margin="3dp"
				android:padding="5dp"
				android:src="@drawable/view1"
				android:scaleType="fitCenter" />
			<EditText
				android:id="@+id/message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:paddingLeft="8dp"
				android:paddingTop="12dp"
				android:paddingRight="8dp"
				android:paddingBottom="12dp"
				android:background="@android:color/transparent"
				android:textSize="14sp"
				android:textColor="#000000"
				android:hint="Write message"
				android:textColorHint="#607D8B"
				android:imeOptions="actionSend"
				android:layout_weight="1"
				android:maxHeight="100dp" />
			<ImageView
				android:id="@+id/sound"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:padding="5dp"
				android:src="@drawable/ux_6_1"
				android:scaleType="centerInside" />
			<ImageView
				android:id="@+id/send"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginRight="4dp"
				android:padding="5dp"
				android:src="@drawable/ic_send_black"
				android:scaleType="fitCenter" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linearExtra_attach"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/image_camera_attach"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="5dp"
				android:padding="3dp"
				android:src="@drawable/camera"
				android:scaleType="fitCenter" />
			<ImageView
				android:id="@+id/image_music_attach"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="5dp"
				android:padding="3dp"
				android:src="@drawable/music"
				android:scaleType="fitCenter" />
			<ImageView
				android:id="@+id/attach_files"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:padding="3dp"
				android:src="@drawable/ic_more_vert_grey"
				android:scaleType="fitCenter"
				android:alpha="0.8"
				android:layout_gravity="center_horizontal|center_vertical" />
			<ImageView
				android:id="@+id/media"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="5dp"
				android:padding="3dp"
				android:src="@drawable/hevo_1"
				android:scaleType="fitCenter" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

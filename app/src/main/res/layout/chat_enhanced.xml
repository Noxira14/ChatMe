<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Enhanced Header with gradient and animations -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/gradient_chat_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linear_head_top"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/header_gradient">

            <!-- Enhanced Back Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#20FFFFFF">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chevron_left_white"
                    android:scaleType="centerInside"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Profile Section -->
            <LinearLayout
                android:id="@+id/linear_dp_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dps"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:src="@drawable/banned_user"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@android:color/white" />

                </androidx.cardview.widget.CardView>

                <!-- Enhanced Online Status Indicator -->
                <View
                    android:id="@+id/status_indicator"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="-20dp"
                    android:background="@drawable/status_indicator"
                    android:elevation="4dp" />

            </LinearLayout>

            <!-- Enhanced User Info -->
            <LinearLayout
                android:id="@+id/linear12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UserName"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium" />

                    <ImageView
                        android:id="@+id/verified"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/verify563_3"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Enhanced Status with typing indicator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/user_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="last seen recently"
                        android:textSize="13sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.9"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light" />

                    <!-- Typing indicator dots -->
                    <LinearLayout
                        android:id="@+id/typing_dots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@android:color/white" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@android:color/white" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@android:color/white" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Enhanced Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#20FFFFFF">

                    <ImageView
                        android:id="@+id/voiceCall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/voicecall"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#20FFFFFF">

                    <ImageView
                        android:id="@+id/videoCall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/videocall"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#20FFFFFF">

                    <ImageView
                        android:id="@+id/settings"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/settings"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Enhanced Chat Content Area -->
    <LinearLayout
        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/chat_background"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintBottom_toTopOf="@id/message_input_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Enhanced Upload Progress -->
        <androidx.cardview.widget.CardView
            android:id="@+id/upload_progress_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/upload_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageview_up_symbol"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/upload"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="12dp"
                    android:tint="?attr/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_up_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uploading media..."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="sans-serif-medium" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressbar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:indicatorColor="?attr/colorPrimary"
                        app:trackColor="?attr/colorSurfaceVariant"
                        app:trackCornerRadius="4dp"
                        app:indicatorCornerRadius="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Enhanced Messages RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            style="@style/Widget.ChatMe.RecyclerView"
            tools:listitem="@layout/chat_lists" />

        <!-- Enhanced Typing Indicator -->
        <LinearLayout
            android:id="@+id/typing_indicator_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/typeing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="typing"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="?attr/colorPrimary"
                android:layout_marginEnd="4dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/typing_animation"
                android:layout_width="24dp"
                android:layout_height="12dp"
                app:lottie_fileName="lottie/typing_indicator.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="false" />

        </LinearLayout>

    </LinearLayout>

    <!-- Enhanced Message Input Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/message_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="12dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Enhanced Reply Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/message_body_in_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="?attr/colorPrimary"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/message_body_in_reply_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reply to Self"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/message_body_in_reply_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Message Text"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/message_body_in_reply_cancel"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_close_black"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Voice Recording Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/voice_recording_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorErrorContainer"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/sound_record_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/sound_record_cancel"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_close_black"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginHorizontal="12dp">

                        <TextView
                            android:id="@+id/recording_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â— Recording"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnErrorContainer"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/recording_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnErrorContainer"
                            android:fontFamily="monospace" />

                        <!-- Voice wave visualization -->
                        <LinearLayout
                            android:id="@+id/voice_wave_container"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginStart="12dp">

                            <!-- Voice wave bars will be added programmatically -->

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/send_audio"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_send_black"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Main Message Input -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant">

                <LinearLayout
                    android:id="@+id/message_body_in_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/image___atch"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ux_6_2"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="10dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="28dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginHorizontal="4dp" />

                    <ImageView
                        android:id="@+id/view1"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/view1"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Type a message..."
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:maxLines="5"
                        android:inputType="textCapSentences|textMultiLine"
                        android:imeOptions="actionSend"
                        android:fontFamily="sans-serif" />

                    <ImageView
                        android:id="@+id/sound"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ux_6_1"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="10dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_margin="2dp"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="?attr/colorPrimary">

                        <ImageView
                            android:id="@+id/send"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_send_black"
                            android:scaleType="centerInside"
                            android:tint="@android:color/white"
                            android:background="?attr/selectableItemBackgroundBorderless" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Attachment Options -->
            <LinearLayout
                android:id="@+id/linearExtra_attach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/colorSecondaryContainer">

                    <ImageView
                        android:id="@+id/image_camera_attach"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/camera"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="?attr/colorOnSecondaryContainer" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/colorTertiaryContainer">

                    <ImageView
                        android:id="@+id/image_music_attach"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/music"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="?attr/colorOnTertiaryContainer" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/colorErrorContainer">

                    <ImageView
                        android:id="@+id/media"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/hevo_1"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="?attr/colorOnErrorContainer" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant">

                    <ImageView
                        android:id="@+id/attach_files"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_more_vert_grey"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="?attr/colorOnSurfaceVariant" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
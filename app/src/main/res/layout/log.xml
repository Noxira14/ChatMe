<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="@drawable/bg_views_2"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/dv1"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:orientation="vertical"
			android:layout_weight="1" />
		<ImageView
			android:id="@+id/imageview1"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_marginBottom="20dp"
			android:padding="8dp"
			android:src="@drawable/logo"
			android:scaleType="centerInside" />
		<LinearLayout
			android:id="@+id/l_email"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="35dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="35dp"
			android:layout_marginBottom="8dp"
			android:padding="7dp"
			android:background="#EEEEEE"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/im_email"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:src="@drawable/menu_mail"
				android:scaleType="center" />
			<EditText
				android:id="@+id/tx_email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@android:color/transparent"
				android:textSize="14sp"
				android:textColor="#000000"
				android:hint="Email address"
				android:textColorHint="#607D8B"
				android:singleLine="true"
				android:imeOptions="actionNext" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/l_pass"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="35dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="35dp"
			android:layout_marginBottom="8dp"
			android:padding="7dp"
			android:background="#EEEEEE"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/im_pass"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:src="@drawable/menu_secret"
				android:scaleType="center" />
			<EditText
				android:id="@+id/tx_password"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@android:color/transparent"
				android:textSize="14sp"
				android:textColor="#000000"
				android:hint="Password"
				android:textColorHint="#607D8B"
				android:singleLine="true"
				android:inputType="textPassword"
				android:imeOptions="actionDone"
				android:layout_weight="1" />
		</LinearLayout>
		<TextView
			android:id="@+id/textview2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="..."
			android:textSize="12sp"
			android:textColor="#E6E6FA" />
		<LinearLayout
			android:id="@+id/button_continue"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="35dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="35dp"
			android:layout_marginBottom="8dp"
			android:padding="7dp"
			android:background="#007BA7"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/button_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Continue"
				android:textSize="14sp"
				android:textColor="#FFFFFF" />
			<ProgressBar
				android:id="@+id/progressbar1"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:indeterminate="false"
				style="?android:progressBarStyle" />
		</LinearLayout>
		<TextView
			android:id="@+id/textview3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Change theme"
			android:textSize="12sp"
			android:textColor="#EAF6FF" />
		<LinearLayout
			android:id="@+id/dv2"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:orientation="vertical"
			android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>

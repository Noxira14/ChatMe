<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background_enhanced">

    <!-- Enhanced Content Container with better animations -->
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Enhanced Logo Container with Lottie -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logo_card"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="24dp"
            style="@style/Widget.ChatMe.CardView"
            app:cardCornerRadius="70dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/white">

            <!-- Lottie animation for logo -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:lottie_fileName="lottie/Login.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:lottie_speed="0.8" />

            <!-- Fallback logo image -->
            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:scaleType="centerInside"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

        <!-- Enhanced App Branding -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="48dp">

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ChatMe"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"
                android:elevation="4dp" />

            <TextView
                android:id="@+id/app_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect • Chat • Share"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.1" />

        </LinearLayout>

        <!-- Enhanced Loading Animation Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/loading_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#40FFFFFF"
            android:padding="16dp">

            <!-- Primary Lottie Loading Animation -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_loading"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                app:lottie_fileName="lottie/load.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:lottie_speed="1.2" />

        </androidx.cardview.widget.CardView>

        <!-- Enhanced Fallback Loading Dots -->
        <LinearLayout
            android:id="@+id/linear_loading_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <View
                android:id="@+id/dot1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="6dp"
                android:background="@drawable/circle"
                android:backgroundTint="@android:color/white"
                android:elevation="2dp" />

            <View
                android:id="@+id/dot2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="6dp"
                android:background="@drawable/circle"
                android:backgroundTint="@android:color/white"
                android:elevation="2dp" />

            <View
                android:id="@+id/dot3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="6dp"
                android:background="@drawable/circle"
                android:backgroundTint="@android:color/white"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Loading Status Text -->
        <TextView
            android:id="@+id/loading_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initializing ChatMe..."
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:alpha="0.8"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-light" />

        <!-- Bottom Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" />

        <!-- Enhanced Developer Credit -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#30FFFFFF"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/Tpass_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

                <!-- Developer Logo -->
                <ImageView
                    android:id="@+id/tpass"
                    android:layout_width="56dp"
                    android:layout_height="40dp"
                    android:src="@drawable/tpass_apps"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="12dp"
                    android:alpha="0.9" />

                <!-- Developer Info -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crafted with "
                        android:textSize="13sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.8"
                        android:fontFamily="sans-serif-light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="❤️"
                        android:textSize="13sp"
                        android:layout_marginHorizontal="4dp" />

                    <TextView
                        android:id="@+id/admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" by Ibra Decode"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Version Info -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 2.0 • Enhanced Edition"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.6"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-light" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Floating particles animation overlay (optional) -->
    <View
        android:id="@+id/particles_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/particles_background"
        android:alpha="0.1"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <!-- Sender Message Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginStart="64dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/message_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="4dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/chat_bubble_sender">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:maxWidth="280dp"
                android:padding="12dp">

                <!-- Text Message -->
                <TextView
                    android:id="@+id/message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message text here"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="sans-serif"
                    android:visibility="visible" />

                <!-- Image Message -->
                <ImageView
                    android:id="@+id/message_image"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_button_enhanced"
                    android:visibility="gone" />

                <!-- Voice Message Container -->
                <LinearLayout
                    android:id="@+id/voice_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/voice_play_button"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_play_arrow"
                        android:background="@drawable/rounded_button_enhanced"
                        android:padding="6dp"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:id="@+id/voice_wave_container"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginEnd="8dp">
                        <!-- Voice wave bars will be added programmatically -->
                    </LinearLayout>

                    <TextView
                        android:id="@+id/voice_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:00"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <!-- File Message Container -->
                <LinearLayout
                    android:id="@+id/file_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_attachment"
                        android:layout_marginEnd="8dp"
                        android:tint="@android:color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/file_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="document.pdf"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:maxWidth="180dp"
                            android:ellipsize="middle"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/file_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.2 MB"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:alpha="0.8" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Message Info (Time + Status) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:30"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:alpha="0.8"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="sans-serif-light" />

                    <ImageView
                        android:id="@+id/status_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/message_status_indicator"
                        android:scaleType="centerInside" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Reactions Container -->
    <LinearLayout
        android:id="@+id/reactions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="2dp"
        android:visibility="gone">

        <!-- Reaction items will be added programmatically -->

    </LinearLayout>

</LinearLayout>
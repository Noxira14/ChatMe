<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:background="@android:color/transparent"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/linear_dp"
			android:layout_width="61dp"
			android:layout_height="59dp"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/circleimageview1"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:paddingLeft="3dp"
				android:paddingTop="3dp"
				android:paddingRight="1dp"
				android:paddingBottom="3dp"
				android:src="@drawable/banned_user"
				app:civ_border_width="0dp"
				app:civ_border_color="#008DCD"
				app:civ_circle_background_color="#FFFFFF"
				app:civ_border_overlay="true" />
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/disappeare_icon"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:src="@drawable/verify563_3"
				android:translationX="-5.0dp"
				android:translationY="-25.0dp"
				android:layout_gravity="right"
				app:civ_border_width="0dp"
				app:civ_border_color="#008DCD"
				app:civ_circle_background_color="#FFFFFF"
				app:civ_border_overlay="true" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:gravity="center_vertical"
			android:orientation="vertical"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/textview1"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:padding="1dp"
					android:text="Sunny Mavale"
					android:textSize="14sp"
					android:textColor="#FFFFFF" />
				<ImageView
					android:id="@+id/verified"
					android:focusable="false"
					android:layout_width="17dp"
					android:layout_height="17dp"
					android:layout_marginLeft="2dp"
					android:src="@drawable/verify563_3"
					android:scaleType="fitCenter"
					android:layout_gravity="center_horizontal|center_vertical" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linearSubTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/sub_image"
					android:focusable="false"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/sub_img"
					android:scaleType="centerInside"
					android:translationY="1.0dp"
					android:layout_gravity="center_horizontal|center_vertical" />
				<TextView
					android:id="@+id/subtitle_text"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:text="Sent a Images."
					android:textSize="11sp"
					android:textColor="#607D8B"
					android:lines="1"
					android:layout_gravity="center_horizontal|center_vertical"
					android:ellipsize="end"
					android:scrollHorizontally="true" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="3dp"
			android:paddingTop="8dp"
			android:paddingRight="3dp"
			android:paddingBottom="8dp"
			android:gravity="right"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/extra"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="2dp"
					android:layout_marginTop="2dp"
					android:layout_marginRight="5dp"
					android:layout_marginBottom="2dp"
					android:padding="2dp"
					android:background="@android:color/transparent"
					android:gravity="center_horizontal|center_vertical"
					android:text="online"
					android:textSize="10sp"
					android:textColor="#607D8B" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear_message_dot"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginLeft="2dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="2dp"
				android:padding="3dp"
				android:background="#00C853"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<TextView
					android:id="@+id/message_count"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="17dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="09"
					android:textSize="12sp"
					android:textColor="#FFFFFF" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/system"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="@android:color/transparent"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/sys_icon"
			android:focusable="false"
			android:layout_width="45dp"
			android:layout_height="45dp"
			android:src="@drawable/ban"
			android:scaleType="centerInside" />
		<TextView
			android:id="@+id/sys_text"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="@android:color/transparent"
			android:text="Dear user , your id getting more &amp; more reports about spam! this message for warn you!"
			android:textSize="12sp"
			android:textStyle="bold"
			android:textColor="#E74C3C"
			android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>

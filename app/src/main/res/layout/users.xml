<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear_horizon"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/linear1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linear_tranp"
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:orientation="horizontal" />
				<LinearLayout
					android:id="@+id/linear_header"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="5dp"
					android:paddingTop="1dp"
					android:paddingRight="5dp"
					android:paddingBottom="1dp"
					android:background="#007BA7"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview_header"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Messages"
						android:textSize="20sp"
						android:textStyle="bold"
						android:textColor="#FFFFFF" />
					<LinearLayout
						android:id="@+id/linear_search_id"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="5dp"
						android:background="@android:color/transparent"
						android:gravity="center_vertical"
						android:orientation="horizontal"
						android:layout_weight="1">
						<ImageView
							android:id="@+id/search_2"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:layout_marginLeft="5dp"
							android:src="@drawable/search"
							android:scaleType="fitXY"
							android:alpha="0.5" />
						<EditText
							android:id="@+id/edittext1"
							android:layout_width="match_parent"
							android:layout_height="60dp"
							android:padding="8dp"
							android:background="@android:color/transparent"
							android:textSize="16sp"
							android:textColor="#FFFFFF"
							android:hint="Search users.."
							android:textColorHint="#EEEEEE"
							android:layout_weight="1" />
						<ImageView
							android:id="@+id/imageview_close_seach"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:padding="3dp"
							android:src="@drawable/ico_2"
							android:scaleType="fitXY"
							android:alpha="0.5" />
					</LinearLayout>
					<ImageView
						android:id="@+id/search"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:src="@drawable/search"
						android:scaleType="fitXY" />
					<LinearLayout
						android:id="@+id/request_box"
						android:layout_width="41dp"
						android:layout_height="41dp"
						android:orientation="vertical">
						<ImageView
							android:id="@+id/request"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:padding="5dp"
							android:src="@drawable/requests_pop"
							android:scaleType="centerInside"
							android:layout_gravity="center_horizontal|center_vertical" />
						<TextView
							android:id="@+id/request_count"
							android:layout_width="17dp"
							android:layout_height="17dp"
							android:gravity="center_horizontal|center_vertical"
							android:text="0"
							android:textSize="10sp"
							android:textColor="#007BA7"
							android:translationX="5.0dp"
							android:translationY="-32.0dp"
							android:layout_gravity="center_horizontal|center_vertical" />
					</LinearLayout>
					<ImageView
						android:id="@+id/settings"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginLeft="5dp"
						android:src="@drawable/settings"
						android:scaleType="centerCrop"
						android:layout_gravity="center_horizontal|center_vertical"
						android:transitionName="image" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_story"
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/linear_story_main"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/story_bg"
							android:layout_width="70dp"
							android:layout_height="70dp"
							android:gravity="center_horizontal"
							android:orientation="vertical">
							<de.hdodenhof.circleimageview.CircleImageView
								android:id="@+id/story_img"
								android:layout_width="70dp"
								android:layout_height="70dp"
								android:padding="5dp"
								android:src="@drawable/banned_user"
								app:civ_border_width="0dp"
								app:civ_border_color="#008DCD"
								app:civ_circle_background_color="#00000000"
								app:civ_border_overlay="true" />
							<ImageView
								android:id="@+id/imageview_plus"
								android:layout_width="20dp"
								android:layout_height="20dp"
								android:padding="3dp"
								android:background="@android:color/transparent"
								android:src="@drawable/plus"
								android:scaleType="centerCrop"
								android:translationX="15.0dp"
								android:translationY="-20.0dp" />
						</LinearLayout>
						<TextView
							android:id="@+id/textview2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="5dp"
							android:text="Your Story"
							android:textSize="14sp"
							android:textStyle="bold"
							android:textColor="#000000"
							android:layout_gravity="center_horizontal|center_vertical" />
					</LinearLayout>
					<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/recyclerview1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						tools:listitem="@layout/storyview" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_caller"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:layout_marginTop="5dp"
					android:layout_marginRight="20dp"
					android:layout_marginBottom="5dp"
					android:padding="8dp"
					android:background="#F5F9FC"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview_user_call"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="User2 "
						android:textSize="14sp"
						android:textColor="#000000" />
					<TextView
						android:id="@+id/textview_calling"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Calling.."
						android:textSize="14sp"
						android:textColor="#000000"
						android:layout_weight="1" />
					<ImageView
						android:id="@+id/img_call"
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:background="#44926A"
						android:src="@drawable/voicecall"
						android:scaleType="centerInside" />
				</LinearLayout>
				<ListView
					android:id="@+id/listview1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:dividerHeight="0dp"
					android:divider="@null"
					android:choiceMode="none"
					tools:listitem="@layout/users_list" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginRight="50dp"
		android:layout_marginBottom="50dp"
		android:layout_gravity="right|bottom"
		app:srcCompat="@drawable/plus_users" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Lottie Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_email_waiting"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="32dp"
            app:lottie_fileName="lottie/Email.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Your Email"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We've sent a verification link to your email address. Please check your inbox and click the link to verify your account."
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp" />

        <!-- Email Address Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <TextView
                android:id="@+id/email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user@example.com"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:gravity="center"
                android:padding="16dp" />

        </androidx.cardview.widget.CardView>

        <!-- Resend Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/resend_email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Resend Email"
            android:textSize="16sp"
            android:textAllCaps="false"
            style="@style/Widget.ChatMe.Button.Outlined"
            android:layout_marginBottom="16dp" />

        <!-- Back to Login -->
        <TextView
            android:id="@+id/back_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

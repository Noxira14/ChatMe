<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background of the progress bar -->
    <item android:id="@android:id/background">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#E0E0E0" /> <!-- Light gray background -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Foreground (the part that fills) of the progress bar -->
    <item android:id="@android:id/secondaryProgress">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#76FF03" /> <!-- Green color for progress -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- The progress bar color -->
    <item android:id="@android:id/progress">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#00BCD4" /> <!-- Blue color for progress -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

</layer-list>
